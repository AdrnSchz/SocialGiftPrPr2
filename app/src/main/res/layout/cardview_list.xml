<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="405dp"
    android:layout_height="93dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="0dp"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@color/purpleTheme"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cvhome_gifticon"
            android:layout_width="47dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:scaleX="2"
            android:scaleY="2"
            app:srcCompat="@drawable/gift_icon_foreground" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cvlist_priority"
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginStart="290dp"
            android:layout_marginTop="13dp"
            android:contentDescription="@string/app_name"
            tools:srcCompat="@tools:sample/avatars" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cvlist_checkbox"
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginStart="330dp"
            android:layout_marginTop="13dp"
            android:contentDescription="@string/app_name"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/cvlist_name"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/abeezee"
            android:text="Christmas List"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>