<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/settings_photo"
        android:layout_width="235dp"
        android:layout_height="38dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:hint="Photo link"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_photo_text" />

    <TextView
        android:id="@+id/settings_photo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="Photo link"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_email" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/settings_email"
        android:layout_width="235dp"
        android:layout_height="38dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:hint="Email"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_email_text" />

    <TextView
        android:id="@+id/settings_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="Email"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_username" />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="183dp"
        android:layout_height="31dp"
        android:fontFamily="@font/abeezee"
        android:text="Manage Profile"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <ImageButton
        android:id="@+id/settings_arrow_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/white"
        android:contentDescription="button of back"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/settings_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_title"
        app:srcCompat="@drawable/arrow_back" />

    <TextView
        android:id="@+id/settings_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:text="Username "
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_title" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/settings_username"
        android:layout_width="235dp"
        android:layout_height="38dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:hint="Username"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_username_text" />

    <Button
        android:id="@+id/settings_save"
        android:layout_width="129dp"
        android:layout_height="46dp"
        android:layout_marginTop="48dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_photo" />

    <Button
        android:id="@+id/settings_modify"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:text="modify password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_save" />

    <Button
        android:id="@+id/settings_logout"
        android:layout_width="296dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:text="log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_modify" />

</androidx.constraintlayout.widget.ConstraintLayout>